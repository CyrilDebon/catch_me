<% content_for(:title, "Choisir une ligne") %>

<%= simple_form_for :search, url: searches_path, method: :get, remote: true do |f| %>
  <%= f.input_field 'term', onkeyup: "Rails.fire(this.form, 'submit')", class: 'search-bar', placeholder: 'chercher un arrÃªt' %>
<% end %>

<div id="stop-search" class="search-result"></div>

<ul class="list-group">
  <% @lines.each do |line| %>
   <li class="list-group-item d-flex align-items-baseline">
      <div class="circle-transport-type <%= 'long-code' if line.long_code? %>" style="background-color:#<%= line.background %>;"><%= line.code %></div>&nbsp;
      <%= line.name %>
      <%= link_to "", line_path(line), class: "list-item-link" %>
    </li>
  <% end %>
</ul>


