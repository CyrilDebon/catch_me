<% content_for(:title) do %>
  <div class="circle-transport-type <%= 'long-code' if @stop.direction.line.long_code? %>" style="background-color:#<%= @stop.direction.line.background %>;">
    <%= @stop.direction.line.code %>
  </div>&nbsp;
  <%= @stop.direction.line.name %>- <%= @stop.name %>

<% end %>
<div id="stop" class="flex-grow-1 d-flex" data-stop-id="<%= @stop.tbm_stop_id %>" data-line-code="<%= @stop.code %>">


  <div id="main-passage" class="d-flex flex-column align-items-center justify-content-center flex-grow-1">

    <div class="next-passages-top">
      PROCHAIN PASSAGE
    </div>

    <div class="countdown big-timer"></div>

    <div class="destination">
      <p class="next-passages mb-3"><%= @stop.direction.name %></p>
    </div>
  </div>
</div>


<% if current_or_guest_user %>
  <div class="text-center">
    <div id="fav">
      <%= render "favorites/actions", stop: @stop %>
    </div>
  </div>
<% end %>

<div class="d-flex flex-column next-time-passage p-3" >
  <span class="next-passage-footer pb-3"> PASSAGES SUIVANTS </span>
  <div id="next-passages"></div>
</div>






