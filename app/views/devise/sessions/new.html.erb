<% content_for(:title, "Se connecter") %>

<div class="log-in-form-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs form-inputs-log-in">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: 'Mot de passe',
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions form-actions-log-in">
      <button type="button" class="btn btn-dark">
        <%= f.button :submit, "Se connecter" %>
      </button>
    </div>
  <% end %>
  <div class="forget-password">
    <%= render "devise/shared/links" %>
  </div>
</div>
