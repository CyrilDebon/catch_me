<section class="flyout flyout-closed">
  <header class="flyout-header">
    <div class="d-flex justify-content-between">
      <a class="flyout-close icon-link" href="#">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M19 6.4L17.6 5L12 10.6L6.4 5L5 6.4L10.6 12L5 17.6L6.4 19L12 13.4L17.6 19L19 17.6L13.4 12L19 6.4Z" fill="white"></path>
        </svg>
      </a>
      <img class="avatar" src="http://image.noelshack.com/fichiers/2014/44/1414370916-texmn.jpg">
  </header>

  <div class="flyout-links">

    <% if user_signed_in? %>
      <%= link_to "Trouver un arrêt", lines_path %>

      <h3 class="label">
        Mes arrêts favoris
      </h3>
      <div id="favorites-stop">
        <% current_user.favorites.each do |favorite| %>
          <%= render "favorites/favorite", favorite: favorite %>
        <% end %>
      </div>

      <%= link_to "Se déconnecter",  destroy_user_session_path %>
    <% else %>

      <%= link_to "Se connecter / créer un compte", new_user_registration_path %>
      Se connecter / créer un compte
    <% end %>

    <a href="#">Mentions légales</a>
  </div>

  <div class="flyout-shadow flyout-close"></div>
</section>

<a href="#" class="flyout-open">
  <svg width="36" height="36" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M3 18H21V16H3V18ZM3 13H21V11H3V13ZM3 6V8H21V6H3Z" fill="black"/>
  </svg>
</a>

